FROM python:3.11-slim

# ставим ffmpeg
RUN apt-get update && apt-get install -y --no-install-recommends ffmpeg \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# зависимости
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# код и файлы меток
COPY . .

ENV PYTHONUNBUFFERED=1
CMD ["python", "bot.py"]
